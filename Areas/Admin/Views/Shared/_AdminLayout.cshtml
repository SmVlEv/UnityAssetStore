<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Админка Unity Asset Store</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"  rel="stylesheet" />
    <!-- Custom CSS (можно подключить свой файл) -->
</head>
<body>
    <!-- Навигация в админке -->
    <div class="d-flex">
        <!-- Боковое меню -->
        <nav class="bg-light border-end p-3" style="min-width: 250px; max-width: 250px;">
            <h4>Unity Asset Store</h4>
            <ul class="nav nav-pills flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Главная</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Add">Добавить товар</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">Добавить категорию</a>
                </li>
                <li class="nav-item mt-4">
                    <a class="nav-link text-danger" asp-controller="Home" asp-action="Index">← Вернуться на сайт</a>
                </li>
            </ul>
        </nav>
        <!-- Основной контент -->
        <main class="p-4 w-100">
            @RenderBody()
        </main>
    </div>
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> 
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>