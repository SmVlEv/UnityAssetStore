@model IEnumerable<UnityAssetStore.Models.Asset>

@{
    ViewData["Title"] = "Панель управления";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Управление товарами</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Цена</th>
            <th>Категория</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var asset in Model)
        {
            <tr>
                <td>@asset.Id</td>
                <td>@asset.Name</td>
                <td>@asset.Price.ToString("C")</td>
                <td>@asset.Category?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@asset.Id" class="btn btn-warning btn-sm">Изменить</a>
                    <a asp-action="Delete" asp-route-id="@asset.Id" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-success">Добавить товар</a>