@model UnityAssetStore.Models.Asset

@{
    ViewData["Title"] = "Редактировать товар";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Редактировать товар</h2>

<form asp-area="Admin" asp-controller="Dashboard" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <!-- Название -->
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <small class="form-text text-muted">Введите название товара.</small>
    </div>

    <!-- Описание -->
    <div class="mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
        <small class="form-text text-muted">Добавьте подробное описание товара.</small>
    </div>

    <!-- Цена -->
    <div class="mb-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
        <small class="form-text text-muted">Укажите цену товара в рублях.</small>
    </div>

    <!-- Изображение превью -->
    <div class="mb-3">
        <label asp-for="PreviewImageUrl"></label>
        <input asp-for="PreviewImageUrl" class="form-control" />
        <span asp-validation-for="PreviewImageUrl" class="text-danger"></span>
        <small class="form-text text-muted">Введите URL или путь к изображению товара.</small>
    </div>

    <!-- Категория -->
    <div class="mb-3">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
        <small class="form-text text-muted">Выберите категорию товара.</small>
    </div>

    <!-- Кнопки действия -->
    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>