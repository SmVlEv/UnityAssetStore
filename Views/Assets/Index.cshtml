@model IEnumerable<UnityAssetStore.Models.Asset>

@{
    ViewData["Title"] = "Каталог товаров";
}

<h2>Каталог Unity Assets</h2>

<div class="row">
    @foreach (var asset in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="@asset.PreviewImageUrl" class="card-img-top" alt="@asset.Name" />
                <div class="card-body">
                    <h5 class="card-title">@asset.Name</h5>
                    <p class="card-text">@asset.Description</p>
                    <p class="card-text text-danger"><strong>@asset.Price.ToString("C")</strong></p>
                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@asset.Id">Подробнее</a>
                </div>
            </div>
        </div>
    }
</div>