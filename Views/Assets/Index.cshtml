@model IEnumerable<UnityAssetStore.Models.Asset>

<h2>Каталог активов</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена</th>
            <th>Категория</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Действие</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var asset in Model)
        {
            <tr>
                <td>@asset.Name</td>
                <td>@asset.Description</td>
                <td>@asset.Price.ToString("C")</td>
                <td>@asset.Category?.Name</td>

                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Edit" asp-route-id="@asset.Id" class="btn btn-warning btn-sm">Редактировать</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Admin"))
{
    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Add" class="btn btn-success">Добавить товар</a>
}