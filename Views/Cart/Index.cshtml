@model UnityAssetStore.Models.ShoppingCart

@{
    ViewData["Title"] = "Корзина";
}

<h2>Ваша корзина</h2>

@if (Model.Items.Count == 0)
{
    <p>Корзина пуста.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Наименование</th>
                <th>Цена</th>
                <th>Количество</th>
                <th>Сумма</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Asset.Name</td>
                    <td>@item.Asset.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Asset.Price * item.Quantity).ToString("C"))</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="assetId" value="@item.AssetId" />
                            <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-right">Итого:</th>
                <th>@Model.TotalPrice().ToString("C")</th>
                <th>
                    <a asp-controller="Orders" asp-action="Create" class="btn btn-success">Оформить заказ</a>
                </th>
            </tr>
        </tfoot>
    </table>
}