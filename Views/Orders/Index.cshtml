@model IEnumerable<UnityAssetStore.Models.Order>

@{
    ViewData["Title"] = "Заказы";
}

<h2>Ваши заказы</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Дата</th>
            <th>Статус</th>
            <th>Сумма</th>
            <th>Детали</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.Status</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Просмотреть</a>
                </td>
            </tr>
        }
    </tbody>
</table>