@model UnityAssetStore.Models.Order

@{
    ViewData["Title"] = $"Заказ №{Model.Id}";
}

<h2>Заказ №@Model.Id</h2>
<p><strong>Дата:</strong> @Model.OrderDate</p>
<p><strong>Статус:</strong> @Model.Status</p>
<p><strong>Общая сумма:</strong> @Model.TotalAmount.ToString("C")</p>

<h4>Товары:</h4>
<ul>
    @foreach (var item in Model.Items)
    {
        <li>
            @item.Asset.Name — @item.Quantity x @item.UnitPrice.ToString("C")
        </li>
    }
</ul>

<a asp-action="Index" class="btn btn-secondary">Назад к списку заказов</a>